
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow users to write to their own profile picture
    match /profile_pictures/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users (coaches) to upload class banners.
    // The filename format is checked in the code, but this rule allows the upload.
    match /live-class-banners/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
